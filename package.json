{
  "name": "salle-des-machines",
  "version": "0.0.1",
  "author": "kikiklang",
  "source": "src/html/index.html",
  "description": "A boilerplate for vanilla projects",
  "homepage": "https://github.com/kikiklang/salle-des-machines#readme",
  "license": "MIT",
  "browserslist": [
    "defaults"
  ],
  "keywords": [
    "parcel",
    "boilerplate",
    "static",
    "app",
    "vanilla",
    "javascript",
    "bundle",
    "css"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/kikiklang/salle-des-machines.git"
  },
  "scripts": {
    "start": "parcel src/html/index.html --open",
    "build": "npm run clean && parcel build --no-source-maps",
    "serve": "npx serve dist",
    "clean": "rimraf -rf ./.parcel-cache && rimraf -rf ./dist",
    "prettier": "prettier --write 'src/**/*.html'",
    "stylelint": "stylelint --fix 'src/**/*.css'",
    "xo": "xo  --env=browser --fix",
    "format": "npm run clean && npm run prettier && npm run stylelint && npm run xo"
  },
  "devDependencies": {
    "@parcel/optimizer-css": "^2.3.2",
    "@parcel/transformer-css-experimental": "^2.3.2",
    "husky": "^7.0.4",
    "parcel": "^2.3.2",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "stylelint-color-format": "^1.1.0",
    "stylelint-config-rational-order": "^0.1.2",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-group-selectors": "^1.0.8",
    "xo": "^0.48.0"
  },
  "prettier": {
    "printWidth": 130,
    "singleQuote": true,
    "bracketSpacing": true
  },
  "xo": {
    "semicolon": false,
    "space": true,
    "rules": {
      "node/prefer-global/process": 0
    }
  },
  "stylelint": {
    "plugins": [
      "stylelint-color-format",
      "stylelint-group-selectors"
    ],
    "extends": [
      "stylelint-config-standard",
      "stylelint-config-rational-order"
    ],
    "rules": {
      "selector-type-no-unknown": null,
      "comment-empty-line-before": null,
      "plugin/stylelint-group-selectors": true,
      "color-format/format": {
        "format": "hsl"
      }
    }
  }
}
